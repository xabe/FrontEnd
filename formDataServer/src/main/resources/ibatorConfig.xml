<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
	
	<context id="mysql" targetRuntime="MyBatis3" defaultModelType="conditional">
  
    <plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin" />
    <plugin type="org.mybatis.generator.plugins.SerializablePlugin" />
  
    <jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:mysql://localhost:3306/KE" userId="root" password="root" />

    <javaTypeResolver >
      <property name="forceBigDecimals" value="false" />
    </javaTypeResolver>

    <javaModelGenerator targetPackage="com.xabe.formData.model"
			targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
	</javaModelGenerator>

    <sqlMapGenerator targetPackage="com.xabe.formData.persistence.sql"
			targetProject="src/main/resources">
			<property name="enableSubPackages" value="true" />
	</sqlMapGenerator>

    <javaClientGenerator type="XMLMAPPER" targetPackage="com.xabe.formData.persistence"  targetProject="src/main/java">
      <property name="enableSubPackages" value="true" />
    </javaClientGenerator>

			<table tableName="t_prueba" domainObjectName="prueba.Prueba">
							<generatedKey column="id" sqlStatement="SELECT LAST_INSERT_ID()" identity="true"/>
					</table>
		
  </context>
</generatorConfiguration>
